<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
   		<item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="common_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/devider_line</item>
    </style>
    
    <style name="common_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:scrollbars">none</item>
    </style>
    
    <!-- 加载进度 -->
    <style name="loading_refresh" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar</item>
    </style>
    
    <!-- 通用Dialog样式 -->
    <style name="BMF.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="chat_text_date_style">
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bt_chat_date</item>
    </style>
    
    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
    
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="bt_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/F8</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bt_bottom_gray_normal</item>
    </style>
    
    <style name="bt_yellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/F8</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bt_bottom_yellow</item>
    </style>
    
    <style name="tv_common_navi_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/F3</item>
        <item name="android:textColor">@color/C8</item>
    </style>

    <style name="tv_common_navi_bar02">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableRight">@drawable/mmh_ic_sortdown_normal</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/F3</item>
        <item name="android:textColor">@color/C8</item>
    </style>
    
    <style name="edit_address_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/F5</item>
        <item name="android:textColor">@color/C7</item>
    </style>
    
    <style name="edit_address_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/F5</item>
        <item name="android:textColor">@color/C8</item>
        <item name="android:textColorHint">#b8b8b8</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>
    
    <style name="setting_rela_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/myfuction_items_selecter</item>
    </style>
    
    <style name="setting_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/F5</item>
        <item name="android:textColor">@color/C8</item>
    </style>
    
    <style name="setting_sub_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/ic_folder_right</item>
        <item name="android:textSize">@dimen/F3</item>
        <item name="android:textColor">@color/C6</item>
    </style>
    
    <style name="setting_sub_title_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/F3</item>
        <item name="android:textColor">@color/C6</item>
    </style>
    
    <style name="common_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">@dimen/F4</item>
        <item name="android:textColor">@color/C8</item>
        <item name="android:textColorHint">@color/C6</item>
    </style>
    
    <style name="switch_button" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/switch_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkMark">?android:listChoiceIndicatorMultiple</item>
    </style>
    
    <style name="common_viewstub_mask">
        <item name="android:id">@id/view_mask</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout">@layout/common_view_mask</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    
    <style name="dialog_re" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/helftranslucent_background</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="dialog_sex" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="popwin_anim_style_toTop">
        <item name="android:windowEnterAnimation">@anim/popwin_show_to_top</item>
        <item name="android:windowExitAnimation">@anim/popwin_hide_to_top</item>
    </style>

</resources>
