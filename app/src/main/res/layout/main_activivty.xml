<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/C0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2.5dp"
            android:drawableTop="@drawable/jjr_ic_lp_2"
            android:gravity="center"
            android:text="楼盘"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/F0" />
        
        <TextView
            android:id="@+id/tab_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2.5dp"
            android:drawableTop="@drawable/jjr_ic_wdkh_1"
            android:gravity="center"
            android:text="客户"
            android:textColor="@color/C7"
            android:textSize="@dimen/F0" />

        <TextView
            android:id="@+id/tab_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2.5dp"
            android:drawableTop="@drawable/jjr_ic_wo_1"
            android:gravity="center"
            android:text="@string/my"
            android:textColor="@color/C7"
            android:textSize="@dimen/F0" />
    </LinearLayout>

    <View
        android:id="@id/divider_line1"
        style="@style/common_divider_line"
        android:layout_above="@id/bottom_view" />

    <RelativeLayout
        android:id="@id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider_line1"
        android:layout_below="@id/title_view" >
    </RelativeLayout>

</RelativeLayout>